                        bool "PA0"

                    config TIM2_CH1_PA15
                        bool "PA15"
                    
                    config TIM2_CH2_PA1
                        bool "PA1"

                    config TIM2_CH2_PB3
                        bool "PB3"

                endchoice

            config BSP_USING_TIM3_EXT_COUNTER
                bool "Enable TIM3 External Counter"
                default n
                choice
