                        bool "PA8"

                    config TIM1_CH1_PE9
                        bool "PE9"
                    
                    config TIM1_CH2_PA9
                        bool "PA9"

                    config TIM1_CH2_PE11
                        bool "PE11 "

                endchoice

            config BSP_USING_TIM2_EXT_COUNTER
