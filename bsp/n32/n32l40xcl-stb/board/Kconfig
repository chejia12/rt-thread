                            bool "PA15 AF5"
                        endchoice
                    endif
                config BSP_USING_TIM2_PWM_CH2
                    bool "Enable TIM2 channel2"
                    default n
                    if BSP_USING_TIM2_PWM_CH2
                        choice
                        prompt "Select Pin  "
                        default TIM2_CH2_PA1
                        config TIM2_CH2_PA1
                            bool "PA1 AF2 "
                        config TIM2_CH2_PB3
                            bool "PB3 AF2"
                        endchoice
                    endif
                config BSP_USING_TIM2_PWM_CH3
                    bool "Enable TIM2 channel3"
                    default n
                    if BSP_USING_TIM2_PWM_CH3
                        choice
                        prompt "Select Pin  "
                        default TIM2_CH3_PA2
                        config TIM2_CH3_PA2
                            bool "PA2 AF2 "
                        config TIM2_CH3_PB10
                            bool "PB10 AF2"
                        endchoice
                    endif
                config BSP_USING_TIM2_PWM_CH4
                    bool "Enable TIM2 channel3 AF2 PB11"
                    default n
            endif#BSP_USING_TIM2_PWM

        menuconfig BSP_USING_TIM3_PWM
